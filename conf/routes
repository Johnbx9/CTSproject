# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Below is the routes for the CTSproject
# ========================================================================================

POST    /login                      controllers.Users.login()
POST    /signup                     controllers.Users.signup()
GET     /signup                     controllers.Users.index()
GET     /logout                     controllers.Users.logout()
GET     /profile/:username          controllers.userProfile.index(id: Long, username: String)

GET     /upload                     controllers.toolUpload.index()
POST    /upload                     controllers.toolUpload.upload()
GET     /tool/:id                   controllers.toolUpload.show(id: Long)
POST    /tool/:id                   controllers.toolUpload.borrow(id: Long)
POST     /gavetool/:id                   controllers.toolUpload.giveback(id: Long)

GET     /about                      controllers.About.index()
GET     /AllTools                   controllers.toolUpload.showAll()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)