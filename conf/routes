# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Below is the routes for the CTSproject
# ========================================================================================

POST    /login                      controllers.Users.login()
GET     /signup                     controllers.Users.index()
POST    /signup                     controllers.Users.signup()
GET     /logout                     controllers.Users.logout()
GET     /profile/:username          controllers.userProfile.index(id: Long, username: String)

GET     /upload                     controllers.toolAction.index()
POST    /upload                     controllers.toolAction.upload()
GET     /tool/:id                   controllers.toolAction.show(id: Long)
POST    /tool/:id                   controllers.toolAction.borrow(id: Long)
POST    /gavetool/:id               controllers.toolAction.giveback(id: Long)
GET     /getImage                   controllers.toolAction.getImage(id: Long)
GET     /AllTools                   controllers.toolAction.showAll()

GET     /about                      controllers.About.index()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)