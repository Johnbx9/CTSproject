# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Below is the routes for the CTSproject
# ========================================================================================

POST    /login                      controllers.Users.login()
POST    /signup                     controllers.Users.signup()
GET     /signup                     controllers.Users.index()
GET     /logout                     controllers.Users.logout()

GET     /profile                    controllers.userProfile.index()

GET     /upload                     controllers.toolUpload.index()
POST    /upload                     controllers.toolUpload.upload()

GET     /about                      controllers.About.index()
GET     /toolDescription            controllers.toolDescription.index()
POST    /toolDescription            controllers.toolDescription.create()
GET     /tool/:id                   controllers.toolDescription.show(id: Long)





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)